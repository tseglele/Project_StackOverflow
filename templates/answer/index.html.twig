{% extends 'base.html.twig' %}

{% block title %}Answer index{% endblock %}

{% block body %}
    <h1>Answer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Answer</th>
                <th>Score</th>
                <th>Publication_date</th>
                <th>Prefered</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td>{{ answer.id }}</td>
                <td>{{ answer.answer }}</td>
                <td>{{ answer.score }}</td>
                <td>{{ answer.publicationDate ? answer.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ answer.prefered }}</td>
                <td>
                    <a href="{{ path('app_answer_show', {'id': answer.id}) }}">show</a>
                    <a href="{{ path('app_answer_edit', {'id': answer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_answer_new') }}">Create new</a>
{% endblock %}
